<Page x:Class="Graduation.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Graduation.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1380"
      Title="AuthPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <ui:TextBox x:Name="LoginTextBox" Height="35" Width="175" PlaceholderText="Логин"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0 20 0 0">
                <ui:PasswordBox x:Name="PasswordBox" Height="90" Width="175" TextWrapping="Wrap" PlaceholderText="Пароль"/>
            </StackPanel>
            <ui:Button x:Name="LogInButton" Height="40" Width="120" HorizontalAlignment="Center" Margin="0 20 0 0" Content="Войти" Click="LogInButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
